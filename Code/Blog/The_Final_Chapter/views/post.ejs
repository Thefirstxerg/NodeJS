<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

  <%- include('layouts/navbar'); -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('<%= blogpost.image %>')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= blogpost.title %></h1>
            <span class="meta">Posted by
              <a href="/users/profile/<%= blogpost.userid._id %>"><%= blogpost.userid.username %></a>
              on <%= blogpost.datePosted.toDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <% if (blogpost.image) { %>
            <div class="post-image-container text-center mb-4">
              <a href="<%= blogpost.image %>" target="_blank">
                <img src="<%= blogpost.image %>" alt="Post image" class="img-fluid" style="max-width: 100%; height: auto;" />
              </a>
            </div>
          <% } %>
          <%- blogpost.body %>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include('layouts/footer'); -%>

  <%- include('layouts/scripts'); -%>

</body>

</html>
