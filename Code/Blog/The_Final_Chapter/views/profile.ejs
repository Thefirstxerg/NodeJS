<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

  <%- include('layouts/navbar'); -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1><%= user.username %>'s Profile</h1>
            <span class="subheading">All posts by <%= user.username %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% for (var i = 0; i < posts.length; i++) { %>
          <div class="post-preview d-flex align-items-start mb-4">
            <% if (posts[i].image) { %>
              <img src="<%= posts[i].image %>" alt="Post image" class="post-thumb mr-3" />
            <% } %>
            <div class="flex-grow-1">
              <a href="/posts/<%= posts[i]._id %>">
                <h2 class="post-title">
                  <%= posts[i].title %>
                </h2>
                <h3 class="post-subtitle small text-muted" style="font-size: 1rem; font-weight: 400; margin: 0 0 10px;">
                  <%- posts[i].body.substring(0, 100) %> ...
                </h3>
              </a>
              <p class="post-meta">Posted on <%= posts[i].datePosted.toDateString() %></p>
            </div>
          </div>
          <hr>
        <% } %>
        
        <% if (posts.length === 0) { %>
          <div class="text-center">
            <p>No blog posts yet!</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <hr>

  <%- include('layouts/footer'); -%>

  <%- include('layouts/scripts'); -%>

</body>

</html>