<h2 class="center">Subscribers Table</h2>
<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% subscribers.forEach(subscriber => { %>
      <tr>
        <td>
          <a href="<%= `/subscribers/${subscriber._id}` %>">
            <%= subscriber.name %>
          </a>
        </td>
        <td>
          <%= subscriber.email %>
        </td>
        <td>
          <div class="button-group">
            <a class="button" href="<%=`subscribers/${subscriber._id}/edit`%>">Edit</a>
            <form method="POST" action="/subscribers/<%= subscriber._id %>?_method=DELETE" style="display: inline;">
              <button type="submit" class="button" onclick="return confirm('Are you sure you want to delete this record?')">Delete</button>
            </form>
          </div>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
