<div class="centered-form">
  <h2 class="center">Edit Subscriber</h2>
  <form method="POST" action="<%=`/subscribers/${subscriber._id}/update?_method=PUT`%>">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" name="name" value="<%= subscriber.name %>" required>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" name="email" value="<%= subscriber.email %>" required>
    </div>
    <div class="form-group">
      <label for="zipCode">Zip Code:</label>
      <input type="number" name="zipCode" value="<%= subscriber.zipCode %>" required>
    </div>
    <div class="button-container">
      <input type="submit" class="button" value="Update">
    </div>
  </form>
</div>
