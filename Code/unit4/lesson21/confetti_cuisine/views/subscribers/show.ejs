<div class="centered-form">
  <h1 class="center">Subscriber Data for <%= subscriber.name %></h1>

  <table class="table">
    <tr>
      <th>Name</th>
      <td><%= subscriber.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= subscriber.email%></td>
    </tr>
    <tr>
      <th>Zip Code</th>
      <td><%= subscriber.zipCode%></td>
    </tr>
  </table>

  <div class="button-container">
    <a class="button" href="/subscribers">View all subscribers</a>
    <a class="button" href="<%=`/subscribers/${subscriber._id}/edit`%>">Edit Subscriber Details</a>
    <form method="POST" action="/subscribers/<%= subscriber._id %>?_method=DELETE" style="display: inline;">
      <button type="submit" class="button" onclick="return confirm('Are you sure you want to delete this record?')">Delete</button>
    </form>
  </div>
</div>
